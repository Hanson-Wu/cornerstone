{% extends "datastax/ticker/base.jinja2" %}

{% block title %}Ticker{% endblock %}

{% block body %}
    <body>
    <div id="recommendations-page-div">
        {% include "datastax/ticker/navbar.jinja2" %}

        <table id="item-list">
            <thead>
            <tr>
                <th class="tapcell1">Symbol
                </th>
                <th class="tapcell2">Action</th>
                <th class="tapcell3">Why
                </th>
            </tr>
            </thead>
            <tbody>
            {% for row in results %}
                <tr {% if loop.first %}class="selecteditem"{% endif %}
                    id="itemblistutton{{ loop.index }}">
                    <td class="tapcell1">
                        <a href="#">{{ row.symbol }}</a>
                    </td>
                    <td class="tapcell2"
                        id="{% if row.buy %}pricerising{% else %}pricefalling{% endif %}">
                        {% if row.buy %}BUY{% else %}SELL{% endif %}
                    </td>
                    <td class="tapcell3">
                        {% if row.buy %}+{% endif %}
                        {{ '%d'|format(row.projected_growth * 100) }}% /
                        {{ '%d'|format(row.invested_peers * 100) }}%
                    </td>
                </tr>
                <script type="text/javascript">
                    currentValues('{{ row.exchange }}', '{{ row.symbol }}', '{{ row.quantity }}', '{{ row.investment }}');
                </script>
            {% endfor %}
            </tbody>
        </table>

        <div id="details-list-block">
            {% for row in results %}
                <div id="itemblistdetails{{ loop.index }}" class="itemblistdetailsclass">
                    <table id="details-list">
                        <tbody>
                        <tr>
                            <td class="dlcname">
                                <a href="#">{{ row.name }}</a>
                            </td>
                            <td>
                                <p class="dlcsubheader">Quantity</p>

                                <p>{{ row.quantity }}</p>
                        </tr>
                        <tr>
                            <td>
                                <p class="dlcsubheader">Price</p>

                                <p id="current-{{ row.exchange }}-{{ row.symbol }}">
                                    ---
                                </p>
                            </td>
                            <td>
                                <p class="dlcsubheader">Order</p>

                                <p id="balance-{{ row.exchange }}-{{ row.symbol }}">
                                    ---
                                </p>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="gencolorcode">
                                <p class="dlcsubheader">Why</p>

                                <p>
                                    {% if row.buy %}+{% endif %}
                                    {{ '%d'|format(row.projected_growth * 100) }}% Gain /
                                    {{ '%d'|format(row.invested_peers * 100) }}% of Peers Invested
                                </p>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            {% endfor %}


            <div id="itemblistdetails2" class="itemblistdetailsclass">
                <table id="details-list">
                    <tbody>
                    <tr>
                        <td class="dlcname">
                            <a href="#">Facebook</a>
                        </td>
                        <td>
                            <p class="dlcsubheader">Quantity</p>

                            <p>150</p></td>
                    </tr>
                    <tr>
                        <td>
                            <p class="dlcsubheader">Price </p>

                            <p>$90.00</p>
                        </td>
                        <td>
                            <p class="dlcsubheader">Balance</p>

                            <p>$0.00</p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="gencolorcode">
                            <p class="dlcsubheader">Why</p>

                            <p class="genlossfld">- 20% Loss / 15% of Peers
                                Invested</p>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="static/js/datastax/ticker/custom-v1.js"></script>
{% endblock %}
