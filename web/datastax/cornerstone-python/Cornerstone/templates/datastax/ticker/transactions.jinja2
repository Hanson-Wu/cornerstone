{% extends "datastax/ticker/base.jinja2" %}

{% block title %}Ticker{% endblock %}

{% block body %}
    <div id="page-generic">
        {% include "datastax/ticker/navbar.jinja2" %}

        <table id="item-list">
            <thead>
            <tr>
                <th class="col-xs-2">Symbol</th>
                <th class="col-xs-2">Action</th>
                <th class="col-xs-2">Price</th>
                <th class="col-xs-2">Quantity</th>
                <th class="col-xs-2">Total</th>
            </tr>
            </thead>
            <tbody>
            {% for row in results %}
                <tr {% if loop.first %}class="selecteditem"{% endif %}
                    id="itemblistutton{{ loop.index }}">
                    <td class="col-xs-2 center">{{ row.symbol }}</td>
                    <td class="col-xs-2 center">{% if row.buy %}Buy{% else %}Sell{% endif %}</td>
                    <td class="col-xs-2 center">${{ '%0.2f'|format(row.price) }}</td>
                    <td class="col-xs-2 center">{{ row.quantity }}</td>
                    <td class="col-xs-2 center {% if row.buy %}pricefalling{% else %}pricerising{% endif %}">${{ row.quantity * row.price}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <script src="static/js/datastax/ticker/custom-v1.js"></script>

{% endblock %}
